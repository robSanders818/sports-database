            <li class="list-group-item  list-group-item-secondary">Wild Pitches: <%= playerStats[i].wild_pitch %></li>
            <li class="list-group-item  list-group-item-secondary">HBP: <%= playerStats[i].hbp %></li>
            <li class="list-group-item  list-group-item-secondary">Balks: <%= playerStats[i].balks %></li>
            <li class="list-group-item  list-group-item-secondary">Games Finished: <%= playerStats[i].games_finished %></li>
        </ul>
        <br/>
        <br/>
    <% } %>
